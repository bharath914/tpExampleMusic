<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<com.google.android.material.card.MaterialCardView
    android:id="@+id/card"
    android:background="#000000"
    app:cardBackgroundColor="#000000"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginBottom="4dp"
    android:layout_marginVertical="@dimen/sm"
    android:layout_marginHorizontal="@dimen/sm"
    app:cardElevation="@dimen/sm">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"    >
        <ImageView
            android:id="@+id/albumart"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            android:src="@drawable/starboy"



        >

        </ImageView>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/m"
            android:layout_marginTop="@dimen/m"
            android:fontFamily="@font/roboto"
            android:maxLines="1"
            android:padding="5dp"
            android:paddingTop="@dimen/sm"
            android:scrollHorizontally="true"
android:singleLine="true"
            android:text="S"
            android:textColor="#E8DBDB"
            android:textSize="@dimen/textxm"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/albumart"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/m"
            android:layout_marginTop="@dimen/sm"
            android:paddingStart="5dp"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:text="The Weeknd"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:textSize="@dimen/textm"
            android:singleLine="true"
            android:textColor="#F4EBEB"
            app:layout_constraintStart_toEndOf="@id/albumart"
            app:layout_constraintTop_toBottomOf="@id/title">

        </TextView>

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"

            android:layout_marginTop="@dimen/xx_sm"
            android:layout_marginBottom="16dp"
            android:text="3:50"
            android:paddingStart="10dp"
            android:textColor="#B2A8A8"
            android:textSize="@dimen/textm"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/albumart"
            app:layout_constraintTop_toBottomOf="@+id/artist" />

        <TextView
            android:id="@+id/filetype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="@dimen/xx_sm"
            android:layout_marginBottom="16dp"
            android:text="MP3"
            android:textColor="#B2A8A8"
            android:textSize="@dimen/textm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/duration"
            app:layout_constraintTop_toBottomOf="@+id/artist"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>